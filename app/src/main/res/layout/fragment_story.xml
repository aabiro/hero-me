<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hero_bg_gradient"
    tools:context="com.example.aaryn.herome.Fragments.StoryFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_banner_bar"
            android:minHeight="?attr/actionBarSize">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUPERMAN"
            android:textAlignment="center"
            android:textColor="#fac740"
            android:textSize="24sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="65dp"
                android:text="                    Superman is from a planet called Krypton. His parents found out that their planet was going to explode so they sent their baby son to Earth in a spacecraft to save him. As he grows up, Clark finds out that he has special powers. He is invulnerable and is strong enough to lift almost anything. He can also fly. Superman can run and move faster than a bullet. He wears a blue and red costume and cape to keep his alter ego a secret."
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/big_superman_logo" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BACKSTORY"
                android:textAlignment="center"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="42dp"
            android:gravity="bottom"
            android:text="PRIMARY POWER"
            android:textStyle="bold" />

        <Button
            android:id="@+id/geneticBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/flight_option"
            android:drawableLeft="@drawable/superman_crest"
            android:drawableRight="@drawable/item_selected_transparent"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textColor="#fac740" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="42dp"
            android:gravity="bottom"
            android:text="SECONDARY POWER"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bornBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/super_strength_option"
            android:drawableLeft="@drawable/super_strength"
            android:paddingLeft="5dp"
            android:paddingRight="32dp"
            android:textColor="#fac740" />

        <Button
            android:id="@+id/startOverBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/start_over_button"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textColor="#fac740" />

    </LinearLayout>

</FrameLayout>
